[Unit]
Description=Start ecuagenera notifier service

[Service]
ExecStart=/usr/bin/python3 /opt/ecuagenera-notifier/ecuagenera_notifier.py

# keep process after user logs off
RemainAfterExit=false

# Use syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ecuagenera-notifier

[Install]
WantedBy=default.target
